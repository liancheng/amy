import subprocess

Import('env')

program = env.Program(target='test',
                      source=Glob('*.cpp'),
                      LIBS=['gtest',
                            'gflags',
                            'glog',
                            'boost_filesystem',
                            'boost_system',
                            'mysqlclient_r'])

env.Command(target='dummy',
            source=program,
            action=program[0].abspath)

