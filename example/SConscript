Import('env')
Import('libs')

example_libs = libs + (['boost_program_options'])

utils = env.Object(source='utils.cpp')

[env.Program(target=example,
             source=['%s.cpp' % (example),
                     utils],
             LIBS=example_libs)
 for example in ['async_connect',
                 'async_execute',
                 'async_multi_query',
                 'async_single_query',
                 'blocking_connect',
                 'blocking_execute',
                 'blocking_multi_query',
                 'blocking_single_query',
                 'coroutine']]

